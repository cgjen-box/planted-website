<style>
    .hero {
        padding: var(--space-5xl) var(--space-md) var(--space-3xl);
        text-align: center;
        background: var(--planted-purple);
        color: white;
    }

    .hero-badge {
        display: inline-block;
        padding: 0.5rem 1rem;
        background: rgba(255,255,255,0.15);
        border-radius: 100px;
        font-size: 0.85rem;
        font-weight: 600;
        letter-spacing: 0.1em;
        margin-bottom: var(--space-lg);
    }

    .hero h1 {
        font-size: clamp(2.5rem, 8vw, 5rem);
        max-width: 900px;
        margin: 0 auto var(--space-md);
    }

    .hero h1 span {
        color: var(--planted-green);
    }

    .hero p {
        font-size: 1.25rem;
        opacity: 0.9;
        max-width: 600px;
        margin: 0 auto var(--space-xl);
    }

    .stats-section {
        padding: var(--space-3xl) var(--space-md);
        background: var(--planted-cream);
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
        gap: var(--space-lg);
        max-width: 1000px;
        margin: 0 auto;
    }

    .stat-card {
        text-align: center;
        padding: var(--space-lg);
    }

    .stat-number {
        font-family: 'VC Henrietta', Georgia, serif;
        font-size: 3rem;
        font-weight: 700;
        color: var(--planted-purple);
        line-height: 1;
        margin-bottom: 0.5rem;
    }

    .stat-label {
        font-size: 0.9rem;
        color: var(--planted-black);
        opacity: 0.7;
    }

    .section-header {
        text-align: center;
        max-width: 600px;
        margin: 0 auto var(--space-2xl);
    }

    .section-header h2 {
        font-size: clamp(2rem, 5vw, 3.5rem);
        margin-bottom: var(--space-sm);
    }

    .section-header p {
        font-size: 1.1rem;
        opacity: 0.7;
    }

    .partners-section {
        padding: var(--space-3xl) var(--space-md);
    }

    .partners-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: var(--space-lg);
        max-width: 900px;
        margin: 0 auto;
    }

    .partner-card {
        text-align: center;
        padding: var(--space-xl);
        background: white;
        border-radius: 1rem;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    }

    .partner-logo {
        font-size: 3rem;
        margin-bottom: var(--space-sm);
    }

    .partner-name {
        font-weight: 700;
        font-size: 1.1rem;
        margin-bottom: 0.25rem;
    }

    .partner-type {
        font-size: 0.85rem;
        opacity: 0.6;
    }

    .products-section {
        padding: var(--space-3xl) var(--space-md);
        background: var(--planted-purple);
        color: white;
    }

    .products-section .section-header p {
        opacity: 0.8;
    }

    .benefits-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: var(--space-lg);
        max-width: 1200px;
        margin: 0 auto;
    }

    .benefit-card {
        padding: var(--space-xl);
        background: rgba(255,255,255,0.1);
        border-radius: 1rem;
    }

    .benefit-icon {
        font-size: 2rem;
        margin-bottom: var(--space-sm);
    }

    .benefit-card h3 {
        font-size: 1.25rem;
        margin-bottom: 0.5rem;
    }

    .benefit-card p {
        opacity: 0.8;
        line-height: 1.5;
    }

    .range-section {
        padding: var(--space-3xl) var(--space-md);
    }

    .product-categories {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
        gap: var(--space-lg);
        max-width: 1000px;
        margin: 0 auto;
    }

    .category-card {
        text-align: center;
    }

    .category-image {
        aspect-ratio: 1;
        border-radius: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: var(--space-md);
    }

    .category-icon {
        font-size: 4rem;
    }

    .category-card h3 {
        font-size: 1.25rem;
        margin-bottom: 0.25rem;
    }

    .category-card p {
        font-size: 0.9rem;
        opacity: 0.7;
    }

    .quote-section {
        padding: var(--space-3xl) var(--space-md);
        background: var(--planted-cream);
        text-align: center;
    }

    blockquote {
        max-width: 800px;
        margin: 0 auto;
    }

    blockquote p {
        font-family: 'VC Henrietta', Georgia, serif;
        font-size: clamp(1.5rem, 4vw, 2.5rem);
        line-height: 1.2;
        margin-bottom: var(--space-md);
    }

    blockquote cite {
        font-size: 1rem;
        opacity: 0.7;
        font-style: normal;
    }

    .contact-section {
        padding: var(--space-3xl) var(--space-md);
        text-align: center;
    }

    .contact-content {
        max-width: 600px;
        margin: 0 auto;
    }

    .contact-content h2 {
        font-size: clamp(2rem, 5vw, 3rem);
        margin-bottom: var(--space-sm);
    }

    .contact-content > p {
        font-size: 1.1rem;
        opacity: 0.7;
        margin-bottom: var(--space-xl);
    }

    .contact-options {
        display: flex;
        flex-wrap: wrap;
        gap: var(--space-sm);
        justify-content: center;
    }

    @media (max-width: 768px) {
        .contact-options {
            flex-direction: column;
            align-items: center;
        }

        .contact-options .btn {
            width: 100%;
            max-width: 300px;
            justify-content: center;
        }
    }
</style>
