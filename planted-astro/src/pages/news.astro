---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const base = import.meta.env.BASE_URL;

const news = await getCollection('news');
const sortedNews = news.sort((a, b) =>
    new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);

const featuredNews = sortedNews.filter(article => article.data.featured);
const regularNews = sortedNews.filter(article => !article.data.featured);

// Category colors
const categoryColors: Record<string, string> = {
    partnership: 'purple',
    product: 'green',
    company: 'orange',
    sustainability: 'teal',
    campaign: 'pink'
};
---

<Layout title="News â€“ Planted" description="The latest from Planted. Product launches, partnerships, sustainability updates, and more." currentPage="news">
    <section class="hero">
        <span class="hero-badge reveal">Latest Updates</span>
        <h1 class="reveal">What's <span>growing</span></h1>
        <p class="reveal">News, launches, and stories from the world of planted.</p>
    </section>

    {featuredNews.length > 0 && (
        <section class="featured-section">
            <div class="featured-grid">
                {featuredNews.map((article) => (
                    <article class="featured-card reveal-scale">
                        <a href={`${base}/news/${article.data.slug}`} class="featured-link">
                            <div class="featured-image">
                                <img src={article.data.image} alt={article.data.title} loading="lazy" />
                                <span class={`category-badge ${categoryColors[article.data.category] || 'purple'}`}>
                                    {article.data.category}
                                </span>
                            </div>
                            <div class="featured-content">
                                <time datetime={article.data.date}>
                                    {new Date(article.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                                </time>
                                <h2>{article.data.title}</h2>
                                <p>{article.data.excerpt}</p>
                                <span class="read-more">
                                    Read More
                                    <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
                                        <path d="M5 12h14M12 5l7 7-7 7"/>
                                    </svg>
                                </span>
                            </div>
                        </a>
                    </article>
                ))}
            </div>
        </section>
    )}

    <section class="news-grid-section">
        <div class="section-header reveal">
            <h2>All News</h2>
            <div class="category-filters">
                <button class="filter-btn active" data-filter="all">All</button>
                <button class="filter-btn" data-filter="product">Products</button>
                <button class="filter-btn" data-filter="partnership">Partnerships</button>
                <button class="filter-btn" data-filter="sustainability">Sustainability</button>
                <button class="filter-btn" data-filter="company">Company</button>
            </div>
        </div>

        <div class="news-grid">
            {regularNews.map((article) => (
                <a href={`${base}/news/${article.data.slug}`} class="news-card reveal" data-category={article.data.category}>
                    <div class="news-image">
                        <img src={article.data.image} alt={article.data.title} loading="lazy" />
                    </div>
                    <div class="news-content">
                        <div class="news-meta">
                            <span class={`category ${categoryColors[article.data.category] || 'purple'}`}>
                                {article.data.category}
                            </span>
                            <time datetime={article.data.date}>
                                {new Date(article.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })}
                            </time>
                        </div>
                        <h3>{article.data.title}</h3>
                        <p>{article.data.excerpt}</p>
                    </div>
                </a>
            ))}
        </div>
    </section>

    {sortedNews.length === 0 && (
        <section class="empty-state">
            <p>No news articles yet. Check back soon!</p>
        </section>
    )}

    <!-- CTA Section -->
    <section class="cta-section">
        <div class="cta-inner reveal">
            <h2>Stay in the loop</h2>
            <p>Get the latest news, recipes, and exclusive offers delivered to your inbox.</p>
            <a href="#" class="btn btn-green">Subscribe to Newsletter</a>
        </div>
    </section>
</Layout>

<script>
    function initNewsFilters() {
        const filterBtns = document.querySelectorAll('.filter-btn');
        const newsCards = document.querySelectorAll('.news-card') as NodeListOf<HTMLElement>;

        filterBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                // Update active state
                filterBtns.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');

                const filter = (btn as HTMLElement).dataset.filter || 'all';

                // Filter cards with animation
                newsCards.forEach(card => {
                    const category = card.dataset.category || '';

                    if (filter === 'all' || category === filter) {
                        card.style.display = '';
                        card.classList.remove('hidden');
                    } else {
                        card.classList.add('hidden');
                        setTimeout(() => {
                            if (card.classList.contains('hidden')) {
                                card.style.display = 'none';
                            }
                        }, 300);
                    }
                });
            });
        });
    }

    initNewsFilters();
    document.addEventListener('astro:page-load', initNewsFilters);
</script>

<style>
    .hero {
        padding: 8rem 1.5rem 4rem;
        text-align: center;
        background: var(--planted-purple);
        color: white;
    }

    .hero-badge {
        display: inline-block;
        background: rgba(107, 191, 89, 0.2);
        border: 1px solid rgba(107, 191, 89, 0.3);
        color: var(--planted-green);
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.1em;
        padding: 0.5rem 1rem;
        border-radius: 100px;
        margin-bottom: 1.5rem;
    }

    .hero h1 {
        font-size: clamp(3rem, 10vw, 5rem);
        margin-bottom: 1rem;
        line-height: 0.95;
    }

    .hero h1 span {
        color: var(--planted-green);
    }

    .hero p {
        font-size: 1.15rem;
        opacity: 0.9;
        max-width: 500px;
        margin: 0 auto;
    }

    .featured-section {
        padding: 4rem 1.5rem;
        background: white;
    }

    .featured-grid {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        gap: 2rem;
    }

    .featured-card {
        background: white;
        border-radius: 1.5rem;
        overflow: hidden;
        box-shadow: 0 8px 32px rgba(0,0,0,0.08);
        transition: transform 0.4s var(--ease-out-expo), box-shadow 0.4s ease;
    }

    .featured-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 48px rgba(0,0,0,0.12);
    }

    .featured-link {
        display: grid;
        grid-template-columns: 1fr;
        text-decoration: none;
        color: inherit;
    }

    .featured-image {
        position: relative;
        aspect-ratio: 16/9;
        overflow: hidden;
    }

    .featured-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s var(--ease-out-expo);
    }

    .featured-card:hover .featured-image img {
        transform: scale(1.05);
    }

    .category-badge {
        position: absolute;
        top: 1.25rem;
        left: 1.25rem;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 100px;
        font-size: 0.8rem;
        font-weight: 700;
        text-transform: capitalize;
    }

    .category-badge.purple { background: var(--planted-purple); }
    .category-badge.green { background: var(--planted-green); color: var(--planted-black); }
    .category-badge.orange { background: #FF8C42; }
    .category-badge.teal { background: #4A8B8B; }
    .category-badge.pink { background: #E85A9C; }

    .featured-content {
        padding: 2rem;
        display: flex;
        flex-direction: column;
    }

    .featured-content time {
        font-size: 0.85rem;
        opacity: 0.6;
        margin-bottom: 0.75rem;
    }

    .featured-content h2 {
        font-size: 1.75rem;
        line-height: 1.15;
        margin-bottom: 1rem;
        color: var(--planted-purple);
    }

    .featured-content p {
        font-size: 1.05rem;
        line-height: 1.6;
        opacity: 0.7;
        margin-bottom: 1.5rem;
        flex: 1;
    }

    .read-more {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--planted-purple);
        font-weight: 700;
        font-size: 0.95rem;
    }

    .read-more svg {
        width: 18px;
        height: 18px;
        transition: transform 0.3s ease;
    }

    .featured-card:hover .read-more svg {
        transform: translateX(4px);
    }

    .news-grid-section {
        padding: 4rem 1.5rem;
        background: var(--planted-cream);
    }

    .section-header {
        max-width: 1200px;
        margin: 0 auto 2rem;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .section-header h2 {
        font-size: 2rem;
        color: var(--planted-purple);
    }

    .category-filters {
        display: flex;
        gap: 0.5rem;
        flex-wrap: wrap;
    }

    .filter-btn {
        background: white;
        border: 2px solid rgba(97, 38, 158, 0.15);
        color: var(--planted-black);
        padding: 0.6rem 1.25rem;
        border-radius: 100px;
        font-family: inherit;
        font-size: 0.85rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .filter-btn:hover {
        border-color: var(--planted-purple);
    }

    .filter-btn.active {
        background: var(--planted-purple);
        border-color: var(--planted-purple);
        color: white;
    }

    .news-grid {
        max-width: 1200px;
        margin: 0 auto;
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 1.5rem;
    }

    .news-card {
        background: white;
        border-radius: 1.25rem;
        overflow: hidden;
        text-decoration: none;
        color: inherit;
        transition: transform 0.3s var(--ease-out-expo), box-shadow 0.3s ease;
    }

    .news-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 16px 40px rgba(0,0,0,0.1);
    }

    .news-card.hidden {
        opacity: 0;
        transform: scale(0.95);
        pointer-events: none;
    }

    .news-image {
        aspect-ratio: 16/9;
        overflow: hidden;
    }

    .news-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s var(--ease-out-expo);
    }

    .news-card:hover .news-image img {
        transform: scale(1.08);
    }

    .news-content {
        padding: 1.5rem;
    }

    .news-meta {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.75rem;
    }

    .news-meta .category {
        padding: 0.3rem 0.75rem;
        border-radius: 100px;
        font-size: 0.75rem;
        font-weight: 700;
        text-transform: capitalize;
    }

    .category.purple { background: rgba(97, 38, 158, 0.1); color: var(--planted-purple); }
    .category.green { background: rgba(107, 191, 89, 0.15); color: #3d8c3d; }
    .category.orange { background: rgba(255, 140, 66, 0.15); color: #c56420; }
    .category.teal { background: rgba(74, 139, 139, 0.15); color: #3a6f6f; }
    .category.pink { background: rgba(232, 90, 156, 0.15); color: #c03d7c; }

    .news-meta time {
        font-size: 0.8rem;
        opacity: 0.6;
    }

    .news-content h3 {
        font-size: 1.2rem;
        line-height: 1.25;
        margin-bottom: 0.5rem;
        color: var(--planted-purple);
    }

    .news-content p {
        font-size: 0.9rem;
        line-height: 1.5;
        opacity: 0.7;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .empty-state {
        padding: 4rem 1.5rem;
        text-align: center;
        background: var(--planted-cream);
    }

    .empty-state p {
        font-size: 1.2rem;
        opacity: 0.6;
    }

    .cta-section {
        background: var(--planted-purple);
        padding: 5rem 1.5rem;
    }

    .cta-inner {
        max-width: 600px;
        margin: 0 auto;
        text-align: center;
    }

    .cta-section h2 {
        font-size: clamp(2rem, 6vw, 3rem);
        color: white;
        margin-bottom: 0.75rem;
    }

    .cta-section p {
        color: rgba(255, 255, 255, 0.8);
        font-size: 1.1rem;
        margin-bottom: 2rem;
    }

    @media (min-width: 768px) {
        .featured-link {
            grid-template-columns: 1fr 1fr;
        }

        .featured-image {
            aspect-ratio: auto;
        }

        .section-header {
            flex-direction: row;
            justify-content: space-between;
            align-items: center;
        }
    }

    @media (min-width: 1024px) {
        .hero {
            padding: 10rem 3rem 5rem;
        }

        .featured-section {
            padding: 5rem 3rem;
        }

        .news-grid-section {
            padding: 5rem 3rem;
        }

        .featured-content {
            padding: 2.5rem;
        }

        .featured-content h2 {
            font-size: 2rem;
        }
    }

    @media (min-width: 1440px) {
        .featured-section {
            padding: 6rem 5rem;
        }

        .news-grid-section {
            padding: 6rem 5rem;
        }

        .section-header,
        .news-grid,
        .featured-grid {
            max-width: 1400px;
        }

        .cta-section {
            padding: 6rem 5rem;
        }
    }
</style>
