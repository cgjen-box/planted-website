# Planted Availability Database - Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit the .env file to git!

# =============================================================================
# FIREBASE / GOOGLE CLOUD
# =============================================================================

# Path to your Firebase service account JSON file
GOOGLE_APPLICATION_CREDENTIALS=./service-account.json

# Firebase project ID
FIREBASE_PROJECT_ID=planted-availability-db

# =============================================================================
# GOOGLE AI (Gemini)
# =============================================================================

# Google AI API key for Gemini models
# Get one at: https://aistudio.google.com/app/apikey
GOOGLE_AI_API_KEY=your-google-ai-api-key-here

# Model to use (gemini-2.5-flash recommended)
GOOGLE_AI_MODEL=gemini-2.5-flash

# =============================================================================
# GOOGLE CUSTOM SEARCH
# =============================================================================

# Google Custom Search API key
# Get one at: https://console.cloud.google.com/apis/credentials
GOOGLE_SEARCH_API_KEY=your-google-search-api-key-here

# Google Custom Search Engine ID
# Create at: https://programmablesearchengine.google.com/
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id-here

# Optional: Multiple search engine IDs for rotation (600 free queries/day total)
# GOOGLE_SEARCH_ENGINE_ID_1=engine-id-1
# GOOGLE_SEARCH_ENGINE_ID_2=engine-id-2
# GOOGLE_SEARCH_ENGINE_ID_3=engine-id-3
# GOOGLE_SEARCH_ENGINE_ID_4=engine-id-4
# GOOGLE_SEARCH_ENGINE_ID_5=engine-id-5
# GOOGLE_SEARCH_ENGINE_ID_6=engine-id-6

# =============================================================================
# DISCOVERY AGENT SETTINGS
# =============================================================================

# Maximum queries per discovery run (default: 2000)
MAX_QUERIES_PER_RUN=2000

# Enable query caching (default: true)
ENABLE_QUERY_CACHE=true

# Enable inline dish extraction during discovery (default: true)
ENABLE_INLINE_DISH_EXTRACTION=true

# =============================================================================
# ADMIN DASHBOARD
# =============================================================================

# API base URL for admin dashboard
VITE_API_URL=http://localhost:5001/planted-availability-db/us-central1/api

# Firebase Auth domain
VITE_FIREBASE_AUTH_DOMAIN=planted-availability-db.firebaseapp.com

# =============================================================================
# OPTIONAL: ANTHROPIC (Claude)
# =============================================================================

# Claude API key for complex reasoning tasks
# ANTHROPIC_API_KEY=your-anthropic-api-key-here
